---
import { getLangFromUrl, useTranslations } from "../i18n/utils";
import PortfolioLayout from "../layouts/PortfolioLayout.astro";
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
let homeUrl: string;
let resumeUrl: string;
if (lang === "en") {
  homeUrl = "/";
  resumeUrl = "/en/";
} else {
  homeUrl = `/${lang}/`;
  resumeUrl = `/${lang}/`;
}
resumeUrl += "resume.pdf";
---

<PortfolioLayout title={t("notfound.notfound")}>
  <div class="container">
    <div class="upper-section">
      <p class="text">404</p>
    </div>
    <div class="bottom-section">
      <p class="not-found">{t("notfound.notfound")}</p>
      <div class="buttons">
        <a href={homeUrl} class="button">{t("notfound.backhome")}</a>
        <a href={resumeUrl} class="button black">{t("notfound.cv")}</a>
      </div>
    </div>
  </div>
</PortfolioLayout>

<style>
  .container {
    margin-top: 5rem;
    background-color: white;
    position: relative;
    height: 100vh;
    width: 100wh;
    display: grid;
    grid-template-rows: 50% 50%;
  }
  .not-found {
    text-align: center;
    color: #fff;
    font-size: 3.125rem;
    font-family: Montserrat;
    font-weight: 600;
    line-height: 150%;
  }
  .upper-section {
    background-color: white;
    user-select: none;
  }
  .bottom-section {
    display: flex;
    background-color: black;
    gap: 2rem;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }
  .buttons {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    justify-content: center;
    gap: 1rem;
  }
  .text {
    mix-blend-mode: exclusion;
    color: white;
    font-size: 25rem;
    font-weight: 600;
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -55%);
    text-align: center;
  }
  .button {
    display: flex;
    padding: 0.625rem 1.25rem;
    gap: 1.125rem;
    border-radius: 35px;
    border: 1px solid #fff;
    background: #fff;
    color: #000;
    font-size: 1.3125rem;
    font-family: Montserrat;
    text-transform: uppercase;
    font-weight: 600;
    line-height: 150%;
  }
  .black {
    background-color: black;
    color: white;
  }

  @media (max-width: 768px) {
    .not-found {
      font-size: 2.375rem;
    }
    .text {
      font-size: 10rem;
    }
  }
</style>
