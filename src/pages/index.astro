---
import PhotoSection from "../components/PhotoSection/PhotoSection.astro";
import Seperation from "../components/Seperation.astro";
import Interests from "../components/Interests/Interests.astro";
import Projects from "../components/Projects/Projects.astro";
import SoftSkills from "../components/SoftSkills/SoftSkills.astro";
import HardSkills from "../components/HardSkills/HardSkills.astro";
import Certificates from "../components/Certificates/Certificates.astro";
import Contacts from "../components/Contacts/Contacts.astro";
import Layout from "../layouts/Layout.astro";
import RunningRows from "../components/Certificates/RunningRows.astro";
import { getLangFromUrl, useTranslations } from "../i18n/utils";
import { getEntry } from "astro:content";
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const portfolio = await getEntry("portfolio", `${lang}/data`);
const { socials, interests, hardSkills, softSkills, certificates, projects } =
  portfolio.data;
---

<Layout title="Portfolio">
  <main>
    <PhotoSection />
    <Seperation title={t("section.interests")} id="hobbies" />
    <Interests interests={interests} />
    <Seperation title={t("section.projects")} id="projects" />
    <Projects projects={projects} />
    <Seperation isDark title={t("section.skills")} id="skills" />
    <SoftSkills softSkills={softSkills} />
    <HardSkills
      hardSkills={{
        languages: hardSkills.languages,
        programmingLanguages: hardSkills.programmingLanguages,
        softwareSkills: hardSkills.softwareSkills,
        productManagmentSkills: hardSkills.productManagmentSkills,
        UXResearchSkills: hardSkills.UXResearchSkills,
        UXDesignSkills: hardSkills.UXDesignSkills,
        UIDesignSkills: hardSkills.UIDesignSkills,
        frameworkSkills: hardSkills.frameworkSkills,
      }}
    />
    <RunningRows />
    <Certificates certificates={certificates} />
    <Seperation isDark title={t("section.contacts")} id="contacts" />
    <Contacts contacts={socials} />
  </main>
</Layout>
