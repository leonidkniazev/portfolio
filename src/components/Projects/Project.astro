---
export type Props = {
  title: string;
  description: string;
  img: string;
  link: string;
};
const { img, title, link, description } = Astro.props;
---

<a href={link} class="container">
  <img class="background" src={img} alt={title} />
  <div class="content">
    <div class="header">
      <h3 class="title">{title}</h3>
      <img src={"/arrow.svg"} alt="" />
    </div>
    <p>{description}</p>
  </div>
</a>
<style>
  .container {
    position: relative;
    color: white;
    aspect-ratio: 1/1;
  }
  img.background {
    object-fit: cover;
    display: block;
    width: 100%;
    height: 100%;
  }
  .content {
    position: absolute;
    bottom: 5%;
    height: 9rem;
    width: 100%;
    background-color: black;
    display: flex;
    padding: 0.6rem 1.2rem;
    flex-direction: column;
  }
  span {
    font-family: Ysabeau;
    font-style: normal;
    font-weight: 900;
    font-size: 2rem;
    line-height: 150%;
  }
  .title {
    font-weight: 700;
    text-transform: uppercase;
  }
  p {
    font-weight: 400;
    font-size: 1rem;
  }
  .header {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
</style>
