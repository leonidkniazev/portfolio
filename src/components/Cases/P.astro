---
let slot = await Astro.slots.render("default");
let isImage = slot.includes("<img src=");
---

{
  isImage ? (
    <div class="wrapper">
      <slot />
    </div>
  ) : (
    <p class="text">
      <slot />
    </p>
  )
}

<style>
  .text {
    max-width: 40rem;
    flex: 1;
    line-height: 150%;
  }
  .wrapper {
    display: flex;
    width: 100%;
    justify-content: center;
    margin: 1rem 0 2rem 0;
  }
</style>
