---
type Props = {
  id: string;
};
const { id } = Astro.props;
---

<h3 class="heading" id={id}>
  <slot />
</h3>

<style>
  h3 {
    color: #000;
    font-family: Montserrat;
    font-size: 2.25rem;
    font-style: normal;
    font-weight: 500;
    line-height: 140%; /* 3.15rem */
    scroll-margin-top: 4rem;
    margin: 2rem 0 1rem 0;
  }
</style>
