---
import { getLangFromUrl, useTranslations } from "../../i18n/utils";
import Socials from "../PhotoSection/Socials.astro";
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<div class="container">
  <span class="title">{t("case.thanksforattention")}</span>
  <span class="subtitle">{t("case.gladtocooperate")}</span>
  <Socials />
</div>

<style>
  .title {
    font-family: Jost;
    font-size: 2.25rem;
    font-weight: 500;
    line-height: 140%;
  }
  .subtitle {
    color: #000;
    font-size: 1rem;
    line-height: 150%;
  }
  .container {
    display: flex;
    flex-direction: column;
    align-items: end;
    justify-content: end;
  }
</style>
