---
export type Props = { skillName?: string; image?: string };
const { skillName, image } = Astro.props;
---

<div class=`inner${image ? " has-image" : ""}`>
  {skillName && !image && <span>{skillName}</span>}
  {image && <img src={image} alt={`${skillName} image`} />}
</div>

<style>
  .inner {
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: white;
    border-radius: 9999%;
    border: 6px solid;
    border-color: white;
    background-color: black;
    height: 85%;
    width: 85%;
    overflow: hidden;
  }
  .inner.has-image {
    background-color: white;
  }
  img {
    display: block;
    width: 100%;
    height: 100%;
    object-fit: contain;
  }
  span {
    font-weight: 800;
    font-size: 1em;
    text-align: center;
    width: fit-content;
    max-font-size: 1.5rem;
    min-font-size: 0.8rem;
    color: white;
  }
</style>
