---
import { getLangFromUrl, useTranslations } from "../../i18n/utils";
export type Props = {
  frameworkSkills: { name?: string; list?: string[] }[];
};
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const { frameworkSkills } = Astro.props;
---

<div class="container">
  <span class="title">{t("skills.frameworks")}</span>
  {
    frameworkSkills.map((item) => {
      if (item.list) {
        return (
          <>
            <p class="item">{item.name}</p>
            <ul class="list">
              {item.list.map((listItem) => (
                <li class="item">{listItem}</li>
              ))}
            </ul>
          </>
        );
      } else return <p class="item">{item.name}</p>;
    })
  }
</div>
<style>
  .container {
    margin: 70% auto;
  }
  .title {
    font-weight: 800;
    text-transform: uppercase;
    font-size: 1.3rem;
  }
  .list {
    margin-left: 2.75rem;
  }
  .item::marker {
    font-size: 0.8rem;
    margin: auto;
  }
  .item {
    text-transform: uppercase;
    margin-top: 0.6rem;
    font-weight: 400;
    font-size: 1.3rem;
  }
  @media (width<768px) {
    .container {
      margin: 0;
    }
  }
</style>
