---
import Logo from "./Logo.astro";
import Swichlang from "./Swichlang.astro";
---

<header>
  <nav>
    <ul>
      <li><a href="#">Обо мне</a></li>
      <li><a href="#projects">Проекты</a></li>
      <li><a href="#skills">Навыки</a></li>
      <li><a href="#contacts">Контакты</a></li>
      <li><a href="#">Резюме</a></li>
    </ul>
    <div class="logo">
      <Logo />
    </div>
    <Swichlang />
  </nav>
</header>

<style>
  header {
    position: sticky;
    top: 0;
    left: 0;
    right: 0;
    z-index: 100;
  }
  ul {
    display: flex;
    align-items: center;
    gap: 1.2rem;
    list-style: none;
    flex: 1;
    position: relative;
  }
  nav {
    background-color: #000;
    opacity: 90%;
    width: 100%;
    display: flex;
    align-items: center;
    padding: 1.2rem 3.3rem;
    text-transform: uppercase;
  }
  a {
    color: white;
  }
  .logo {
    display: flex;
    align-items: center;
  }

  header {
    display: flex;
  }
  @media (width<1280px) {
    .logo {
      display: none;
    }
  @media (width<768px) {
    ul {
        display: none;
      }
  }
</style>
