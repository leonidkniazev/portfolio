---
import Icon from "./Icon.astro";
---

<div class="container">
  <h1 class="name">Leonid</h1><h3 class="occupation">Product Designer</h3>
  <div class="contacts">
    <div class="icons">
      <Icon src="telegram.svg" href="TODO" />
      <Icon src="instagram.svg" href="TODO" />
      <Icon src="linkedin.svg" href="TODO" />
    </div>
    <a class="resume" href="TODO">Resume</a>
  </div>
</div>

<style>
  .container {
    flex-basis: 50%;
    flex-shrink: 0;
    padding: 2rem 0;
    display: flex;
    flex-direction: column;
    position: relative;
  }
  .occupation {
    font-size: 2.2rem;
    font-weight: 500;
  }
  .name {
    line-height: 5rem;
    font-size: 5rem;
    text-transform: uppercase;
    font-weight: 800;
  }
  .contacts {
    display: flex;
    width: 16rem;
    align-items: center;
    padding: 2rem 0;
    gap: 0.9rem;
  }
  .icons {
    display: flex;
    align-items: center;
    justify-content: space-around;
    gap: 0.5rem;
  }
  .resume {
    padding: 0.6rem 1.2rem;
    border-radius: 9999px;
    text-align: center;
    font-weight: 600;
    line-height: 2rem;
    font-size: 1.3rem;
    background-color: black;
    text-transform: uppercase;
  }
  @media (width<1280px) {
    .contacts {
      flex-direction: column;
    }
  }
  @media (width<768px) {
    .contacts {
      justify-content: start;
      align-items: center;
    }
    .resume {
      width: 100%;
    }
    .icons {
      justify-content: space-between;
      gap: 1rem;
      align-items: stretch;
    }
  }
</style>
