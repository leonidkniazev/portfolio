---
import { getEntry } from "astro:content";
import { getLangFromUrl } from "../../i18n/utils";
import Socials from "./Socials.astro";
const lang = getLangFromUrl(Astro.url);
const portfolio = await getEntry("portfolio", `${lang}/data`);
const { aboutMe } = portfolio.data;
---

<div class="container">
  <h1 class="name">{aboutMe.name}</h1>
  <h2 class="occupation">
    {aboutMe.occupation}
  </h2>
  <Socials />
</div>

<style>
  .container {
    flex-basis: 50%;
    flex-shrink: 0;
    padding: 2rem 0;
    display: flex;
    flex-direction: column;
    position: relative;
  }
  .occupation {
    font-family: Montserrat;
    font-size: 2.2rem;
    font-weight: 500;
    line-height: 3.3rem;
  }
  .name {
    line-height: 5rem;
    font-size: 5rem;
    text-transform: uppercase;
    font-weight: 800;
  }
</style>
