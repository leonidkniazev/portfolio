---
import { getLangFromUrl, useTranslations } from "../../i18n/utils";
import Section from "../Section.astro";
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<Section isDark>
  <div class="container">
    <div class="content">
      <p>
        {t("hero.aboutme1")}
        <br />
        <br />
        {t("hero.aboutme2")}
        <br />
        <br />
        {t("hero.aboutme3")}
        <br />
        <br />
      </p>
    </div>
  </div>
</Section>
<style>
  .container {
    display: flex;
    justify-content: end;
    align-items: center;
    background-color: black;
    padding: 3rem;
  }
  .content {
    position: relative;
    font-family: Montserrat;
    font-size: 1rem;
    line-height: 2.1rem;
    margin: 0 3.2rem;
    width: 40%;
    color: white;
  }
  .content::after {
    content: "â€œ";
    font-family: Ysabeau;
    position: absolute;
    right: -4rem;
    top: 1rem;
    font-size: 8.3rem;
  }
  p {
    font-size: 1rem;
    line-height: 1.5rem;
  }
  @media (width<1280px) {
    .container {
      justify-content: center;
      padding-top: 10rem;
    }
    .content {
      width: 100%;
    }
  }
  @media (width<768px) {
    .container {
      justify-content: center;
      padding-top: 3rem;
      padding-left: 0;
    }
    .content {
      width: 100%;
      margin: 0;
    }
  }
</style>
