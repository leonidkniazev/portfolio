---
import { ImageMetadata } from "astro";
import { Image } from "astro:assets";
export type Props = {
  title: string;
  img: ImageMetadata;
};
const { title, img } = Astro.props;
---

<div class="container">
  <Image src={img} quality={"low"} alt={`${title} photo`} />
  <span>{title}</span>
</div>

<style>
  .container {
    display: flex;
    flex-direction: column;
    justify-content: center;
    gap: 0.3rem;
  }
  img {
    height: 11rem;
    object-fit: cover;
    filter: grayscale(100%);
    transition: filter 0.5s ease-in-out;
    width: 11rem;
  }
  img:hover {
    filter: grayscale(0%);
  }
  span {
    text-transform: uppercase;
    font-size: 0.9rem;
  }
</style>
