---
import { getEntry } from "astro:content";
import { getLangFromUrl } from "../../i18n/utils";
import Section from "../Section.astro";
import Contact from "./Contact.astro";
const lang = getLangFromUrl(Astro.url);
const portfolio = await getEntry("portfolio", `${lang}/data`);
const { socials } = portfolio.data;
---

<Section isDark>
  <div class="container">
    <Contact name={"Instagram"} href={socials.instagram.href} />
    <Contact name={"Telegram"} href={socials.telegram.href} />
    <Contact name={"LinkedIn"} href={socials.linkedin.href} />
    <Contact name={"Email"} href={socials.email.href} />
  </div>
</Section>

<style>
  .container {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    grid-template-rows: repeat(2, 1fr);
    gap: 1.2rem;
    padding-top: 1rem;
  }
  @media (max-width: 768px) {
    .container {
      grid-template-columns: 1fr;
    }
  }
</style>
